<body>

	<!-- container for the chart -->
	<div id="container" style="width:100%; height:400px;"></div>

	<h1 style="text-align: center">Import Financial Elements from Excel file</h1>

	<div style="text-align: center; padding-bottom: 80px; ">

		<%= form_tag import_helper_path, multipart: true do %>
  			<%= file_field_tag :file, required: true %>
  			<%= submit_tag "Import" %>
		<% end %>

	</div>


	<% @financials.each do |financial| %>
  		<span>
    		<%= financial.day %>
    		<%= financial.name %>
    		<%= financial.model_value %>
  		</span>
  		<p></p>
	<% end %>

	<h1 style="text-align: center">Import Financial Elements from Excel file</h1>

</body>

